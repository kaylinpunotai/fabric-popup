<h1>Listing fabric entries</h1>

<%= link_to 'New fabric entry', new_fabric_entry_path %>

<table>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Material</th>
    <th>Color</th>
    <th>Status</th>
    <th>Notes</th>
    <th colspan="3"></th>
  </tr>

  <% @fabric_entries.each do |fabric_entry| %>
    <tr>
      <td><%= fabric_entry.id %></td>
      <td><%= fabric_entry.image %></td>
      <td><%= fabric_entry.title %></td>
      <td><%= fabric_entry.material %></td>
      <td><%= fabric_entry.color %></td>
      <td><%= fabric_entry.status %></td>
      <td><%= fabric_entry.notes %></td>
      <td><%= link_to 'Show', fabric_entry_path(fabric_entry) %></td>
      <td><%= link_to 'Edit', edit_fabric_entry_path(fabric_entry) %></td>
      <td><%= button_to 'Delete', fabric_entry_path(fabric_entry), method: :delete %></td>
    </tr>
  <% end %>
</table>

